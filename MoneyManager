package github;

import java.util.ArrayList;
import java.util.Scanner;

import money.HighSchoolMoney;
import money.Money;

public class MoneyManager {
	ArrayList<Money> moneys = new ArrayList<Money>();
	Scanner input;
	MoneyManager(Scanner input){
		this.input = input;
	}

	public void addmoney() {
		int kind = 0;
		Money money;
		while(kind != 1 && kind != 2) {
			System.out.print("1 for University");
			System.out.print("2 for High School");
			System.out.print("Select num for Money Kind between 1 and 2:");
			kind = input.nextInt();
			if (kind == 1) {
				money =new Money();
				money.getUserInput(input);
				moneys.add(money);
				break;
			}
			else if (kind ==2) {
				money =new HighSchoolMoney();
				money.getUserInput(input);
				moneys.add(money);
				break;

			}
			else {
				System.out.print("Select num for Money Kind between 1 and 2:");
			}
		}
	}

	public void deletemoney() {
		System.out.print("money ID:");
		int moneyId = input.nextInt();
		int index = -1;
		for (int i = 0; i<moneys.size(); i++) {
			if (moneys.get(i).getId() == moneyId) {
				index = i;
				break;
			}
		}
		if(index >= 0) {
			moneys.remove(index);
			System.out.println("the money" + moneyId +" is deleted");
		}
		else {
			System.out.println("the money has not been registered");
			return;
		}
	}
	public void editmoney() {
		System.out.print("money ID:");
		int moneyId = input.nextInt();
		for (int i = 0; i<moneys.size(); i++) {
			Money money = moneys.get(i);
			if (money.getId() == moneyId) {
				int num = -1;
				while(num !=5) {
					System.out.println("** money Info Edit Menu **");
					System.out.println("  1. Edit Id");
					System.out.println("  2. Edit Name");
					System.out.println("  3. Edit Email");
					System.out.println("  4. Edit Phone");
					System.out.println("  5. Exit");
					System.out.println("Select one number between 1 - 5:");
					num = input.nextInt();
					if (num == 1) {
						System.out.print("money ID:");
						int id = input.nextInt();
						money.setId(id);
					}
					else if (num == 2) {
						System.out.print("money name:");
						String name = input.next();
						money.setName(name);
					}
					else if (num == 3) {
						System.out.print("Email address:");
						String email = input.next();
						money.setEmail(email);
					}
					else if (num == 4) {
						System.out.print("Phone number:");
						String phone = input.next();
						money.setPhone(phone);
					}
					else {
						continue;
					} //if
				}//while
				break;
			}//if
		}//for
	}
	public void viewmoneys() {
		//		System.out.print("money ID:");
		//		int moneyId = input.nextInt();
		System.out.println("# of registerd moneys:"+ moneys.size());
		for (int i = 0; i<moneys.size(); i++) {
			moneys.get(i).printInfo();
		}
	}
}
